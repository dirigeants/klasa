{
    "templates": {
        "cleverLinks"           : true,
        "monospaceLinks"        : true,
        "systemName"            : "Klasa",
        "footer"                : "<a href=\"https://github.com/dirigeants/klasa\">Fork me on Github</a>",
        "copyright"             : "",
        "includeDate"           : false,
        "navType"               : "vertical",
        "theme"                 : "cosmo",
        "linenums"              : true,
        "collapseSymbols"       : false,
        "inverseNav"            : true,
        "outputSourceFiles"     : false,
        "outputSourcePath"      : true,
        "dateFormat"            : "dddd, MMMM Do YYYY, h:mm:ss a",
        "syntaxTheme"           : "default",
        "sort"                  : true,
        "search"                : true 
    },
    "source": {
        "include"               : [ "./src"]
    },
    "opts": {
        "template"              : "./node_modules/ink-docstrap/template",
        "encoding"              : "utf8",
        "destination"           : "./docs/",
        "recurse"               : true,
        "tutorials"             : "./tutorials"
    }
}